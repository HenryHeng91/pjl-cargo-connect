<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      xmlns:c="http://jmix.io/schema/flowui/jpql-condition"
      title="msg://masterdataCountryListView.title"
      focusComponent="masterdataCountriesDataGrid">
    <data>
        <collection id="masterdataCountriesDc"
                    class="com.company.pjlcargoconnect.entity.MasterdataCountry">
            <fetchPlan extends="_base"/>
            <loader id="masterdataCountriesDl" readOnly="true">
                <query>
                    <![CDATA[select e from MasterdataCountry e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <urlQueryParameters>
            <genericFilter component="genericFilter"/>
            <pagination component="pagination"/>
        </urlQueryParameters>
    </facets>
    <actions>
        <action id="selectAction" type="lookup_select"/>
        <action id="discardAction" type="lookup_discard"/>
    </actions>
    <layout>
        <genericFilter id="genericFilter"
                       dataLoader="masterdataCountriesDl">
            <properties include=".*"/>
        </genericFilter>
        <hbox id="buttonsPanel" classNames="buttons-panel">
            <button id="createBtn" action="masterdataCountriesDataGrid.create"/>
            <button id="editBtn" action="masterdataCountriesDataGrid.edit"/>
            <button id="removeBtn" action="masterdataCountriesDataGrid.remove"/>
            <simplePagination id="pagination" dataLoader="masterdataCountriesDl"/>
        </hbox>
        <dataGrid id="masterdataCountriesDataGrid"
                  width="100%"
                  minHeight="20em"
                  dataContainer="masterdataCountriesDc"
                  columnReorderingAllowed="true"
                  selectionMode="MULTI">
            <actions>
                <action id="create" type="list_create"/>
                <action id="edit" type="list_edit"/>
                <action id="remove" type="list_remove"/>
            </actions>
            <columns resizable="true">
                <column property="countryName"/>
                <column property="countryCodeIso2"/>
                <column property="countryCodeIso3"/>
                <column property="officialLanguageCodeIso2"/>
                <column property="phoneCode"/>
                <column property="continent"/>
                <column property="currency"/>
                <column property="timezone"/>
            </columns>
        </dataGrid>
        <hbox id="lookupActions" visible="false">
            <button id="selectBtn" action="selectAction"/>
            <button id="discardBtn" action="discardAction"/>
        </hbox>
    </layout>
</view>
